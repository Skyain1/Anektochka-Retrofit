<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:clickable="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardElevation="@dimen/_6sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:orientation="horizontal"
                android:background="@drawable/post_background_top">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="programming"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/brown_text"
                    android:fontFamily="@font/montserrat_bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/more"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_dots"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:foreground="@drawable/ripple_effect_post"
                android:background="@drawable/inside_post_bg">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S:"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/montserrat_bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/setup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="@dimen/_13ssp"
                            android:textColor="@color/dark_text"
                            android:text="Did you hear the story about the cheese that saved the world?"
                            android:textAlignment="center" />

                        <io.husaynhakeem.tradur.TradurTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/dark_text"
                            app:loading_text="Идёт перевод..."
                            app:pre_translation_text="Перевод"
                            app:translate_field="@+id/setup" />

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P:"
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/montserrat_bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/punch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/_20sdp"
                            android:textColor="@color/dark_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="It was legend dairy."
                            android:textSize="@dimen/_13ssp"
                            android:textAlignment="center" />

                        <io.husaynhakeem.tradur.TradurTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="@dimen/_12ssp"
                            android:layout_gravity="right"
                            android:textColor="@color/dark_text"
                            app:loading_text="Идёт перевод..."
                            app:pre_translation_text="Перевод"
                            app:translate_field="@+id/punch" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:orientation="horizontal"
                android:background="@drawable/post_background_bottom">
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>